---
import PageWithDonateLayout from "../layouts/PageWithDonateLayout.astro";
import { partners } from "../web-data/externals/links.ts";
import {
	getLangFromUrl,
	useTranslations,
	useTranslatedPath,
} from "../web-data/i18n/utils";
import Thanks from "../components/Support/Thanks.astro";
import Partners from "../components/Support/Partner.astro";
import Subtitle from "../components/Subtitle.astro";
import Donators from "../components/Support/Donators.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const tr = useTranslatedPath(lang);
---

<PageWithDonateLayout title={t("page.support")}>
	<Thanks />
	<div class="partners-container">
		<Subtitle subtitle={t("support.partners")} />
		{partners.map((partner) => <Partners partner={partner} />)}
	</div>

	<div class="donators">
		<Subtitle subtitle={t("support.donators")} />
		<div class="donators-content">
			<Donators type="company" />
			<Donators type="individual" />
		</div>
	</div>
</PageWithDonateLayout>

<style>

	.donators{
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	.partners-container {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 50px;
	}

	.donators-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 30px;
		width:75%;
	}

	@media screen and (max-width: 810px) {
            .donators-content {
                width: 100%;
            }
        }
</style>
