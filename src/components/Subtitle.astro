---
const { subtitle, align } = Astro.props;

export interface Props {
    subtitle: string;
    align?: string;
}
const alignItem = align || "center";

---

<div class="subtitle-container">
    <h2 class="subtitle-text">{subtitle}</h2>
    <div class="short-horizontal-separator">
        <div class="short-horizontal-separator-child separator"></div>
    </div>
</div>


<style define:vars={{alignItem}}>

    .subtitle-container h2{
        margin: 0px;
        width: fit-content;
    }
.subtitle-text {
    position: relative;
    letter-spacing: 1.36px;
    text-transform: uppercase;
}
.short-horizontal-separator-child {
    position: absolute;
    height: 100%;
    width: 100%;
}
.short-horizontal-separator {
    width: 190px;
    position: relative;
    height: 5px;
}
.subtitle-container {
    width: 100%;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 38px 18px;
    box-sizing: border-box;
    gap: 15px;
    align-items: var(--alignItem);
}

@media (max-width: 810px) {
    .subtitle-text{
        font-size: 1.5rem;
    }
}

</style>


