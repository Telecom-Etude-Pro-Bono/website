---
import {
    getLangFromUrl,
    useTranslations,
    useTranslatedPath,
} from "../../i18n/utils";
import StaticDonateButton from "../StaticDonateButton.astro";
import SearchButton from "../SearchButton.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const tr = useTranslatedPath(lang);
---

<nav class="nav">
    <a href={tr("/")}>
        <div class="logo-container">
            <img
                class="logo"
                src="public/logos/tpb-logo-text.svg"
                alt="Logo Telecom Etude Pro Bono avec texte"
            />
        </div>
    </a>
    <div class="menu-container">
        <a class="nav-link" href={tr("/about")}>
            {t("nav.about")}
        </a>
        <a class="nav-link" href={tr("/patron")}>
            {t("nav.patron")}
        </a>
        <a class="nav-link" href={tr("/support")}>
            {t("nav.support")}
        </a>
        <a class="nav-link" href={tr("/blog")}>
            {t("nav.blog")}
        </a>
        <a class="nav-link" href={tr("/contact")}>
            {t("nav.contact")}
        </a>

        <StaticDonateButton />
        <SearchButton />
    </div>
</nav>

