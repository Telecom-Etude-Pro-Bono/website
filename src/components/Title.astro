---
const { title, height, img} = Astro.props;

export interface Props {
    title: string;
    height?: string;
    img?: string;
}
const imgHeight = height || "auto";

---

<div id="title-container-id"class="title-container">
    <!-- <img alt="icon" src="/bg.jpg" /> -->
    <div class="text-container">
        <h1 class="title-text">{title}</h1>
        <div class="separator title-separator"></div>
    </div>
</div>

<script define:vars={{img}}>
        const titleContainer = document.getElementById("title-container-id");
        titleContainer.style.backgroundImage = "url(" + img + ")";
</script>

<style define:vars={{ imgHeight,img }}>
    .title-container {
        padding-top: 80px;
        top: 0;
  left: 0;
        width: 100%;
    position: relative;
    text-align: center;
    overflow: hidden;
    /* padding: 38px 18px; */
    box-sizing: border-box;
    gap: 15px;
    height: var(--imgHeight);
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    background-blend-mode: lighten;
    background-color: rgba(255, 255, 255, 0.45);
    }

    .title-container img {
        width: 100%;
        height: 100vh;
        object-fit: contain;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
    .text-container h1 {
        margin: 0px;
        width: fit-content;
    }
    .title-text {
        letter-spacing: 1.36px;
        text-transform: uppercase;
    }
    .title-separator {
        height: 5px;
        width: 190px;
        align-self: center;
    }
    .text-container {
        position: relative;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 38px 18px;
        box-sizing: border-box;
        gap: 15px;
        align-items: center;
        font-size: 2rem;
    }

    @media screen and (max-width: 810px) {
        .title-container {
            height: calc(var(--imgHeight) / 2);
            min-height: 50vh;
        }

        .title-text {
            font-size: 2rem;
        }

        .title-separator {
            width: 100px;
        }

    }
</style>
