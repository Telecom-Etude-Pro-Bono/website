---
import Icon from "../Icon.astro";

const { previous, next, current, first, last, lastIndex } = Astro.props;

interface Prop{
	previous?: string;
	next?: string;
	current?: number;
	first?: string;
	last?: string;
	lastIndex?: number;
}
---

<div class="pagination">
	<div class="pagination-next">
	  {
		previous && (
		  <a class="pagination-next" href={previous} rel="prev">
			<div class="arrow-icon">
			  <Icon icon="arrow-left" />
			</div>
			<span class="previous">Previous</span>
		  </a>
		)
	  }
	</div>
	<div class="pagination-list">
	  {
		first && (
		  <a class="pagination-page" href={first}>
			1
		  </a>
		)
	  }
	  {current > 2 && <div class="pagination-gap">...</div>}
	  <div class="pagination-current">
		{current}
	  </div>
	  {
		current < lastIndex - 1 && (
		  <div class="pagination-gap">...</div>
		)
	  }
	  {
		last && (lastIndex > 1) && (
		  <a class="pagination-page" href={last}>
			{lastIndex}
		  </a>
		)
	  }
	</div>
	<div class="pagination-next">
	  {
		next && (
		  <a class="pagination-next" href={next} rel="prev">
			<span class="previous">Next</span>
			<div class="arrow-icon">
			  <Icon icon="arrow-right" />
			</div>
		  </a>
		)
	  }
	</div>
  </div>

<style>
	.arrow-icon {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .previous {
      position: relative;
      line-height: 100%;
    }
    .pagination-previous {
      border-radius: 8px;
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      padding: 8px 12px;
      gap: 8px;
      opacity: 0.5;
      color: #757575;
    }
    .pagination-current {
      border-radius: 8px;
      background-color: var(--dark-green);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 8px 12px;
      color: #f5f5f5;
    }
    .pagination-page {
      border-radius: 8px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 8px 12px;
    }
    .b {
      position: relative;
      line-height: 140%;
    }
    .pagination-gap {
      border-radius: 8px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 8px 16px;
      color: #000;
    }
    .pagination-list {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: flex-start;
      gap: 10px;
    }
    .pagination-next {
      border-radius: 8px;
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      padding: 8px 12px;
      gap: 10px;
      width: 160px;
    }
    .pagination {
      position: relative;
      width: 100%;
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      gap: 10px;
      text-align: left;
      font-size: 20px;
    }
</style>
