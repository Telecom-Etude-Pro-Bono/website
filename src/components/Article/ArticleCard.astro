    text-transform: uppercase;
    display: flex;
    align-items: center;
    height: 27px;
    flex-shrink: 0;
    flex-direction: column;
    justify-content: center;
  }
  .article-card-date {
    position: absolute;
    top: 124px;
    left: 1px;
    background-color: var(--typeColor);
    width: 70px;
    height: 60px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
