    line-height: 20px;
    text-transform: uppercase;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 22px;
    flex-shrink: 0;
  }
  .month-year-text {
    margin: 0;
    text-align: center;
  }
  .month-year {
    align-self: stretch;
    position: relative;
    font-size: 8px;
    letter-spacing: 1px;
