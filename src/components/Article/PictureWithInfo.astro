---
interface Props {
    article: CollectionEntry<"blog">;
}

import { mdToDate } from "../utils";
import type { CollectionEntry } from "astro:content";

const { article } = Astro.props;

const typeColor = "var(--" + article.data.type + "-color)";

import {
    getLangFromUrl,
    useTranslatedPath,
    useTranslations,
} from "../../web-data/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const tr = useTranslatedPath(lang);
const t = useTranslations(lang);

const date = mdToDate(lang, article.data.pubDate);
---

<div class="article-card-img">
    <img src={"/images/" + article.data.image} alt={article.data.title} />
    <div class="article-card-date">
        <b class="b">{date.day}</b>
        <b class="month-year">
            <span>
                <p class="month-year-text letter-space">{date.month}</p>
                <p class="month-year-text letter-space">{date.year}</p>
            </span>
        </b>
    </div>
    <div class="article-card-type">
        <b class="article-card-type-text letter-space"
            >{t("blog." + article.data.type)}</b
        >
    </div>
</div>

<style define:vars={{ typeColor }}>
    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .article-card-description p {
        font-size: 16px;
    }
    .article-card-img {
        position: relative;
        top: -2px;
        left: -1px;
        color: white;
        width: 100%;
        height: 100%;
    }

    .b {
        align-self: stretch;
        position: relative;
        letter-spacing: 1px;
        line-height: 20px;
        text-transform: uppercase;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 22px;
        flex-shrink: 0;
    }
    .month-year-text {
        margin: 0;
        text-align: center;
        font-size: 11px;
        line-height: normal;
    }
    .month-year {
        position: relative;
        font-size: 8px;
        letter-spacing: 1px;
        line-height: 10px;
        text-transform: uppercase;
        display: flex;
        align-items: center;
        height: 27px;
        flex-shrink: 0;
        flex-direction: column;
        justify-content: center;
    }
    .article-card-date {
        position: absolute;
        bottom: 1%;
        left: 0%;
        background-color: var(--typeColor);
        width: 70px;
        height: 60px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .article-card-title-text {
        position: relative;
        height: 100%;
        width: 100%;
        top: 0%;
        left: 0%;

        display: inline-block;
        margin-top: 0px;
        margin-bottom: 0px;
        font-size: 20px;
    }
    .article-card-title {
        position: relative;
    }
    .article-card-description {
        align-self: stretch;
        position: relative;
        font-size: 14px;
        color: #000;
        text-align: justify;
        display: flex;
        align-items: center;
        height: 88px;
        flex-shrink: 0;
    }
    .article-card-title-parent {
        padding: 0px 15px;
        box-sizing: border-box;
        text-align: left;
        font-size: 20px;
        color: var(--typeColor);
        height: -webkit-fill-available;
    }
    .article-card-type-text {
        top: 0px;
        left: 0px;
        line-height: 22.12px;
        text-transform: uppercase;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 133px;
        height: 22px;
    }
    .letter-space {
        letter-spacing: 1.36px;
    }

    .article-card-type {
        position: absolute;
    top: 0px;
    /* left: -1px; */
    background-color: var(--typeColor);
    width: 130px;
    height: 24px;
    overflow: hidden;
    font-size: 10px;
    /* padding: 0px; */
    display: flex;
    align-items: center;
    justify-content: center;
    }
    .article-card {
        width: max-content;
        background-color: #fff;
        height: 350px;
        overflow: hidden;
        flex-shrink: 0;
        text-align: center;
        font-size: 23px;
        color: #fff;
        font-family: Montserrat;
        position: relative;
        width: 320px;
        display: flex;
        flex-direction: column;
    }

    a {
        color: white;
    }
</style>
