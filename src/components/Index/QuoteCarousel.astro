---
import Icon from "../Icon.astro";
import Subsubtitle from "../Subsubtitle.astro";
---

<div class="quote-carousel-container">
    <div class="quote-conatiner">
        <div class="icon-container">
            <Icon icon="chevron-left" />
        </div>
        <div class="text-container">
            <Subsubtitle subsubtitle="CITAS DESTACADAS" />
            <div class="quote">
                <p class="quote-text">
                    "Lorem ipsum dolor sit amet, consectetur adipiscing elit,
                    sed do eiusmod tempor incididunt ut labore et dolore magna
                    aliqua."
                </p>
                <p class="quote-author function">
                    Prénom Nom <br> Président(e) de Telecom Etude ProBono
                </p>
            </div>
        </div>
        <div class="icon-container">
            <Icon icon="chevron-right" />
        </div>
    </div>
</div>

<style>
    .quote-carousel-container {
        top: 0;
        left: 0;
        width: 100%;
        position: relative;
        text-align: center;
        overflow: hidden;
        /* padding: 38px 18px; */
        box-sizing: border-box;
        gap: 15px;
        height: var(--imgHeight);
        background-image: url(/quote-test.jpg);
        background-position: left;
        background-repeat: no-repeat;
        background-size: cover;
        background-color: rgba(255, 255, 255, 0.45);
        display: flex;
    justify-content: center;
    flex-direction: row;
    }

    .icon-container {
        width: 50px;
        height: 50px;
    }

    .quote-conatiner {
        display: flex;
        width: 855px;
        height: 520px;
        padding: 2px 10px;
        justify-content: center;
        align-items: center;
        gap: 20px;
        flex-shrink: 0;
        background: rgba(255, 255, 255, 0.75);
    }

    p{
        text-align: center;
    }
</style>
